{% extends 'base.html.twig' %}

{% block title %}Cat index{% endblock %}

{% block body %}
<div id="wrapper">
<header></header>
    <h1>Cat index</h1>
	
		<form method="get">
		<select name="sort">
		<option value="asc">по возрастанию</option>
		<option value="dsc">по убыванию</option>
		</select>
		<input class="query-input" name="query"/>
		<button type="submit">OK</button>
		</form>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imya</th>
                <th>Poroda</th>
                <th>Cvet</th>
                <th>Harakter</th>
                <th>actions</th>
            </tr>
        </thead>
		
        <tbody>
        {% for cat in cats %}
            <tr>
                <td>{{ cat.id }}</td>
                <td>{{ cat.imya }}</td>
                <td>{{ cat.poroda }}</td>
                <td>{{ cat.cvet }}</td>
                <td>{{ cat.harakter }}</td>
                <td>
                    <a href="{{ path('cat_show', {'id': cat.id}) }}">show</a>
                    <a href="{{ path('cat_edit', {'id': cat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="new-cat" href="{{ path('cat_new') }}">Create new</a>
	<footer></footer>
	</div>
{% endblock %}
